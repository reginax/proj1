<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
  <% if current_trainer == @trainer %>
  <%= link_to "Create a new Pokemon!", pokemons_new_path, :class => "button medium" %>  
  <% end %>
<p> Your list of pokemon: </p>
<p>  <% @trainer.pokemons.each do |p| %>
  Pokemon name: <%= p.name %> | Level: <%= p.level %> | Health: <%= p.health %>   
  <%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %>     
  <% end %>
</p>
